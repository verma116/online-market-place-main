<% layout('/layouts/boilerplate') -%>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>Create a New Listing</h3>
        <form method="POST" action="/products" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" name="listing[name]" placeholder="Add a catchy name" class="form-control" required>
                <div class="valid-feedback">Name looks good!</div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" placeholder="Enter description" class="form-control" required></textarea>
                <div class="invalid-feedback">Please enter a short description</div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image Url/Link</label>
                <input type="text" name="listing[image]" class="form-control">
            </div>
            <div class="row">
                <div class="mb-3 col-md-8">
                    <label for="category" class="form-label">Category</label>
                    <input type="text" name="listing[category]" placeholder="Electronics" class="form-control" required>
                    <div class="invalid-feedback">Category should be valid</div>
                </div>
                <div class="mb-3 col-md-4">
                    <label for="brand" class="form-label">Brand</label>
                    <input type="text" name="listing[brand]" placeholder="Dell" class="form-control" required>
                    <div class="invalid-feedback">Brand name should be valid</div>
                </div>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" placeholder="15000" class="form-control" required>
                <div class="invalid-feedback">Price should be valid</div>
            </div>
            <br>
            <button class="btn btn-primary add-btn">Add</button>
        </form>
    </div>
</div>
