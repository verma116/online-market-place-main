<% layout('/layouts/boilerplate') -%>
    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3>
                <%= listing.brand %>
            </h3>
        </div>
        <div class="card col-6 offset-3 show-card listing-card">
            <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body">
                <p class="card-text">
                    <%= listing.name %> <br>
                        &#8377; <b><%= (typeof listing.price==="number" ) ? listing.price.toLocaleString("en-US")
                            : "Price not available" %></b> <br>
                                <%= listing.country %> <br>
                </p>
            </div>
        </div>

        <div class="btns">
            <a href="/products/<%= listing._id %>/edit" class="btn btn-primary edit-btn offset-3 col-1">Edit</a>

            <form method="POST" action="/products/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-dark offset-2">Delete</button>
            </form>
        </div>
    </div>